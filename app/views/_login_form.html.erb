<div id='registration_form_2'>
<%=form_with url: sessions_url  do |f|%>
<div class="form_line">
  <span class="closebtn" onclick="document.getElementById('registration_form_2').style='display: none';document.querySelector('.form_wrapper').style='display: none'">&times;</span> 
</div>

<div class="row mb-3">
<%=f.label :email, for: "inputEmail4", class: "form-label col-form-label"%>
<div class="col-sm-10">
<%=f.email_field :email,type: 'email', class: "form-control form-control-lg", id: "inputEmail4", placeholder: 'email'%>
</div>
</div>
<div class="row mb-3">
<%=f.label :password, for: "inputPassword4", class: "form-label col-form-label"%>
<div class="col-sm-10">
<%=f.text_field :password, type: 'password', class: "form-control form-control-lg", id: "inputPassword4"%>
</div>
</div>
<div class="row mb-3">
<div class="col-sm-10">
<div class="form_check">
<%=f.check_box :remember_me, class: "form-check-input", value: 1%>
<%=f.label :remember_me, class: "form-check-label"%>
</div>
</div>
</div>
<%=f.submit "Войти",id: "login_btn" ,class: "btn btn-primary btn-lg"%>
<%end%>
<%if flash.notice=="Incorrect email and/or password"%>
<div class="alert alert-danger alert_form" id="log_alert" role="alert">
 <%= flash.notice%>
 </div>
 <%end%>
</div>