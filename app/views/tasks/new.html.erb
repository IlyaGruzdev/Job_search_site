<%=render '/title'%>

<div class="tasks_new_form">
<hr class="my-3">
<h2>Write your task</h2>
<%if flash[:success]%>
<div class="alert alert-success", role="alert">
 <%=flash[:success]%>
 </div>
 <%elsif flash[:warning]%>
<div class="alert alert-danger my-20">
<%unless @task.nil?%>
<ul>
    <% @task.errors.full_messages.each do |m| %>
    <li><%=m%></li>
    <%end%>
</ul>
<%else%>
<%=flash[:warning]%>
<%end%>
 </div>
 <%end%>
<%=form_with url: user_tasks_path do |f|%>
<div class="row mb-3">
<%=f.label :title, for: "inputPassword4",class: "form-label col-form-label"%>
<div class="col-sm-10">
<%=f.text_field :title, placeholder: 'title', class: "form-control form-control-lg"%>
</div>
</div>
<div class="row mb-3">
<%=f.label :body, for: "inputEmail4", class: "form-label col-form-label"%>
<div class="col-sm-10">
<%=f.text_area :body, class: "form-control form-control-lg"%>
</div>
</div>
<div class="row mb-3">
<%=f.label :category, for: "inputPassword4", class: "form-label col-form-label"%>
<div class="col-sm-10">
    <select name="category" id="category" class="form-select" required aria-label="select example">
      <option value="Дизайн">Дизайн</option>
      <option value="Курьерские услуги">Курьерские услуги</option>
      <option value="Ремонт">Ремонт</option>
     <option value="Финансовый советник">Финансовый советник</option>
       <option value="Уборка">Уборка</option>
    </select>
    <div class="invalid-feedback">Example invalid select feedback</div>
  </div>
<div class="col-sm-10 mt-4">
<%=f.submit "Создать", class: "btn btn-primary btn-lg"%>
</div>
<%end%>

 